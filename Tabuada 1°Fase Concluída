programa{
  
  funcao inicio(){
    inteiro x, i

    faca{
      escreva("Digite um valor maior que zero: ")
      leia(x)
    }enquanto(x <= 0)

    para(i = 0; i <= 100; i++){
      escreva(x, " * ", i, " = ", x * i,"\n")
    }
    
  }
}
